{
  "watch": ["index.js", ".env", "src/**/*.js", "config/**/*.js"],
  "ext": "js,json,env",
  "ignore": ["node_modules/", "*.log", "coverage/", "__tests__/", "*.test.js", "*.spec.js"],
  "env": {
    "NODE_ENV": "development"
  },
  "exec": "node index.js",
  "delay": "1000",
  "restartable": "rs",
  "verbose": true,
  "colours": true,
  "events": {
    "restart": "echo 'App restarted due to changes'"
  }
}
